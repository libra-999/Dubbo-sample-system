<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.bookadmin.mapper.AuthMapper">
    <resultMap id="UserResult" type="org.example.commonservice.core.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="dateOfBirth" column="date_of_birth"/>
        <result property="phoneNumber" column="phone"/>
        <result property="roleId" column="role"/>
        <result property="thumbnail" column="thumbnail"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deletedAt" column="deleted_at"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="deletedBy" column="deleted_by"/>
    </resultMap>
    <sql id="selectUserInfo">
        select username,
               email,
               password,
               gender,
               date_of_birth,
               phone,
               role_id,
               status,
               created_at,
               updated_at,
               deleted_at,
               created_by,
               updated_by,
               deleted_by,
               thumbnail
        from users u
    </sql>
<!--  Find username of users  -->
    <select id="findByUsername" resultType="org.example.commonservice.core.entity.UserEntity" parameterType="string">
        <include refid="selectUserInfo"/>
        where u.username = #{username} and delete_at is null
    </select>
<!--  Find email of users  -->
    <select id="findByEmail" parameterType="string"
            resultType="org.example.commonservice.core.entity.UserEntity">
        <include refid="selectUserInfo"/>
        where u.email = #{email} and delete_at is null
    </select>


    <select id="save" resultMap="UserResult">
        insert into users(username, email, password, gender, phone, date_of_birth, role_id, status, created_at,
                          updated_at, deleted_at, created_by, updated_by, deleted_by, thumbnail) value (
                                                                                             #{username}, #{email},
                                                                                             #{password}, #{gender},
                                                                                             #{phoneNumber},
                                                                                             #{dataOfBirth}, #{roleId},
                                                                                             #{status}, #{createdAt},
                                                                                             #{updatedAt}, #{deletedAt},
                                                                                             #{createdBy}, #{updatedBy},
                                                                                             #{deletedBy}, #{thumbnail}
            );
    </select>

    <select id="findById" resultMap="UserResult">
        <include refid="selectUserInfo"/>
        where id = #{id} and delete_at is null
    </select>
</mapper>